{
    "version": 2,
    "builds": [
        { "src": "public/**/*", "use": "@vercel/static" },
        { "src": "api/process.js", "use": "@vercel/node" }
    ],
    "routes": [
        { "src": "/api/(.*)", "dest": "/api/$1" },
        { "src": "^/$", "dest": "/public/index.html" },
        { "src": "/about", "dest": "/public/about.html" },
        { "src": "/contact", "dest": "/public/contact.html" },
        { "src": "/style.css", "dest": "/public/style.css" },
        { "src": "/(.*)", "dest": "/public/$1" }
    ]
}